{
  "manifest_version": 3,
  "name": "TinyHelmet",
  "version": "0.0.1",
  "description": "A tiny browser extension to enhance your development experience",
  "minimum_chrome_version": "120",
  "icons": {
    "16": "public/icon16.png",
    "32": "public/icon32.png",
    "48": "public/icon48.png",
    "128": "public/icon128.png"
  },
  "action": {
    // "default_popup": "popup.html",
    // "default_icon": {
    //   "16": "public/icon16.png",
    //   "32": "public/icon32.png",
    //   "48": "public/icon48.png",
    //   "128": "public/icon128.png"
    // }
    "default_title": "Click to open panel"
  },
  "side_panel": {
    "default_path": "sidePanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "sidePanel"
  ]
}