{
  "$schema": "https://biomejs.dev/schemas/1.9.1/schema.json",
  "root": true,
  "files": {
    "ignore": [
      "dist",
      "node_modules",
      "coverage"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useSingleQuotes": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingComma": "es5"
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
